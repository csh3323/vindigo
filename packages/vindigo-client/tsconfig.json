{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"allowJs": true
	},
	"typeRoots": [
		"./node_modules/@types",
		"./typings"
    ],
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": ["node_modules", "dist"]
}