{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"lib": ["esnext"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}