{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"outDir": "dist",
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["*"]
		},
		"lib": ["esnext", "dom", "dom.iterable"],
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules", "dist"],
}